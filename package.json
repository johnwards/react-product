{
  "name": "react-product",
  "version": "0.0.1",
  "description": "Product filting with react",
  "repository": "https://github.com/johnwards/react-product",
  "dependencies": {
    "jquery-browserify": "^1.8.1",
    "react": "^0.14.0",
    "react-dom": "^0.14.0"
  },
  "devDependencies": {
    "babel-jest": "^5.3.0",
    "babelify": "^6.3.0",
    "browserify": "^11.2.0",
    "http-server": "^0.8.5",
    "jest-cli": "^0.5.10",
    "react-addons-test-utils": "^0.14.0",
    "sinon": "^1.17.1",
    "watchify": "^3.4.0"
  },
  "author": "John Wards",
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "jest": {
    "scriptPreprocessor": "<rootDir>/node_modules/babel-jest",
    "unmockedModulePathPatterns": [
      "react",
      "react-dom",
      "sinon"
    ]
  },
  "scripts": {
    "serve": "./node_modules/.bin/http-server -p 8080",
    "watch": "./node_modules/.bin/watchify js/app.js -o public/js/bundle.js",
    "build": "./node_modules/.bin/browserify js/app.js -o public/js/bundle.js",
    "test": "jest",
    "deploy": "./scripts/deploy-ghpages.sh"
  }
}
